@{
    ViewData["Title"] = "Movie List";
}

@model List<ApplicationResponse>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Director</td>
            <td>Notes</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Director</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.ApplicationId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.ApplicationId">Delete</a></td>
        </tr>
        }
    </tbody>
    
</table>
